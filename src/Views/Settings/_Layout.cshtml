@model Aiursoft.Blog.Models.SettingsViewModels.SettingsViewModel
@{
    Layout = "../Shared/_Layout";
}
<div class="container pt-4 pb-5">
    <div class="row">
        <div class="col-lg-12">
            <!--Alert zone-->
            <div class="alert alert-success alert-dismissible d-none d-lg-block" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <a class="alert-link" href="profile/index.html">Visit your profile!</a> Check your self, you aren't looking well.
            </div>
        </div>
        <div class="col-lg-3 pt-3">
            <!--Profile card-->
            <div class="card card-profile mb-4 mt-5 d-none d-lg-block">
                <div class="card-body">
                    <a href="profile/index.html">
                        <img class="card-profile-img" src="/img/avatar-dhg.png">
                    </a>
                    <h6 class="card-title">
                        <a class="text-inherit" href="profile/index.html">Dave Gamache</a>
                    </h6>
                    <p class="mb-4">I wish i was a little bit taller, wish i was a baller, wish i had a girl… also.</p>
                </div>
            </div>
            <!--Nav bar-->
            <div class="list-group mb-4">
                <a asp-action="Index" class="list-group-item list-group-item-action d-flex justify-content-between @(Model.SubActivePanel == 1 ? "active" : "")">
                    <span>Settings Home</span>
                    <span class="icon icon-chevron-thin-right"></span>
                </a>
                <a asp-action="Profile" class="list-group-item list-group-item-action d-flex justify-content-between @(Model.SubActivePanel == 2 ? "active" : "")">
                    <span>Profile</span>
                    <span class="icon icon-chevron-thin-right"></span>
                </a>
            </div>

            <!--Footer zone-->
            <div class="card card-link-list">
                <div class="card-body">
                    © @DateTime.Now.Year @Values.ProjectName
                </div>
            </div>
        </div>

        <div class="col-lg-9">

            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Blog</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="Index">Settings</a>
                </li>
                <li class="breadcrumb-item active">@ViewContext.RouteData.Values["Action"]</li>
            </ol>
            @RenderBody()

        </div>
    </div>
</div>